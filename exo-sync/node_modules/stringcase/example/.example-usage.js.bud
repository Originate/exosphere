"use strict";

const stringcase = require('../lib');

module.exports = {
    force: true,
    mode: '444',
    data: {
        get usages() {
            return Object.keys(stringcase)
                .filter((name) => {
                    return /case$/.test(name);
                })
                .map((name) => {
                    var convert = stringcase[name];
                    return {
                        name: name,
                        samples: [
                            'foo_bar',
                            'FOO_BAR',
                            'fooBar',
                            'FooBar'
                        ].map((src) => {
                            return {
                                src: src,
                                converted: convert(src)

                            }
                        })
                    }
                });
        }
    }
};

if (!module.parent) {
    require('coz').render(__filename);
}