#!/usr/bin/env bash
set -e

node_modules/o-tools-livescript/bin/build
cd ../exo-setup && bin/setup && node_modules/.bin/build
cd ../exo-run
if [ "$#" == "0" ]; then
  cucumber-js --strict
else
  DEBUG='*,-express:*,-body-parser:*,-observable-process,-text-stream-search,-rails-delegate,-exorelay:*,-stylus:*' cucumber-js --strict "$@"
fi
